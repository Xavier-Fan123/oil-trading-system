# Oil Trading System - Environment Variables Template
# Copy this file to .env and fill in the actual values
# WARNING: NEVER commit .env file to version control

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=OilTradingDb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# RabbitMQ Configuration (Optional)
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=YOUR_RABBITMQ_PASSWORD

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET_KEY=YOUR_VERY_SECURE_SECRET_KEY_MINIMUM_64_CHARACTERS_RECOMMENDED
JWT_ISSUER=https://oiltrading.yourcompany.com
JWT_AUDIENCE=https://oiltrading.yourcompany.com
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# ============================================
# Market Data API (Optional)
# ============================================
MARKET_DATA_API_KEY=your_market_data_api_key_here
MARKET_DATA_BASE_URL=https://api.example.com/market-data

# ============================================
# Application Settings
# ============================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000

# ============================================
# Email/Notification Settings (Future)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@oiltrading.com

# ============================================
# Emergency Risk Notifications
# ============================================
EMERGENCY_EMAIL=risk-manager@company.com
EMERGENCY_PHONE=+1234567890
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=YOUR_KEY

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:5000/api
VITE_WS_URL=ws://localhost:5000
